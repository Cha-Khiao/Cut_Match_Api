{
  "openapi": "3.0.3",
  "info": {
    "title": "Cut Match API",
    "version": "1.0.0",
    "description": "API Specification for the Cut Match application, featuring hairstyles, user profiles, and favorites. Built on Supabase."
  },
  "servers": [
    {
      "url": "https://vpbsnsjojjpzyptbjjfe.supabase.co",
      "description": "Supabase Production URL (Replace [vpbsnsjojjpzyptbjjfe] with your actual ID)"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase JWT for authenticated users."
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "apikey",
        "description": "Supabase anonymous public key."
      }
    },
    "schemas": {
      "Hairstyle": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "created_at": { "type": "string", "format": "date-time" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "image_url": { "type": "string", "format": "uri" },
          "ar_asset_url": { "type": "string", "format": "uri" },
          "category": { "type": "string" }
        },
        "required": ["id", "name"]
      },
      "Profile": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid", "description": "Matches auth.users.id" },
          "updated_at": { "type": "string", "format": "date-time" },
          "username": { "type": "string" },
          "full_name": { "type": "string" },
          "avatar_url": { "type": "string", "format": "uri" }
        },
        "required": ["id"]
      },
      "Favorite": {
        "type": "object",
        "description": "Represents a user's favorite hairstyle.",
        "properties": {
          "user_id": { "type": "string", "format": "uuid" },
          "hairstyle_id": { "type": "string", "format": "uuid" },
          "created_at": { "type": "string", "format": "date-time" }
        },
        "required": ["user_id", "hairstyle_id"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "code": { "type": "string" },
          "hint": { "type": "string" }
        }
      }
    }
  },
  "paths": {
    "/rest/v1/hairstyles": {
      "get": {
        "summary": "List all hairstyles",
        "description": "Retrieves a list of all available hairstyles. This endpoint is public.",
        "tags": ["Hairstyles"],
        "security": [{ "apiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "A list of hairstyles.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Hairstyle" }
                }
              }
            }
          }
        }
      }
    },
    "/rest/v1/profiles": {
      "get": {
        "summary": "List profiles",
        "description": "Retrieves user profiles. Use query parameters to filter by id or username (e.g., ?id=eq.user-uuid).",
        "tags": ["Profiles"],
        "security": [{ "apiKeyAuth": [], "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "A list of profiles.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Profile" }
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update a profile",
        "description": "Updates the profile of the currently authenticated user. Must filter by user ID (e.g., ?id=eq.user-uuid).",
        "tags": ["Profiles"],
        "security": [{ "apiKeyAuth": [], "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "full_name": { "type": "string" },
                  "avatar_url": { "type": "string", "format": "uri" }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Profile updated successfully. No content." }
        }
      }
    },
    "/rest/v1/favorites": {
      "get": {
        "summary": "List user's favorites",
        "description": "Retrieves the favorites for the currently authenticated user. Requires filtering by `user_id` (e.g. `?select=*&user_id=eq.current-user-id`).",
        "tags": ["Favorites"],
        "security": [{ "apiKeyAuth": [], "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "A list of the user's favorite items.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Favorite" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new favorite",
        "description": "Adds a hairstyle to the user's favorites list.",
        "tags": ["Favorites"],
        "security": [{ "apiKeyAuth": [], "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Favorite" }
            }
          }
        },
        "responses": {
          "201": { "description": "Favorite created successfully." }
        }
      },
      "delete": {
        "summary": "Remove a favorite",
        "description": "Removes a hairstyle from the user's favorites list. Requires filtering by `user_id` and `hairstyle_id`.",
        "tags": ["Favorites"],
        "security": [{ "apiKeyAuth": [], "bearerAuth": [] }],
        "responses": {
          "204": { "description": "Favorite deleted successfully. No content." }
        }
      }
    }
  }
}